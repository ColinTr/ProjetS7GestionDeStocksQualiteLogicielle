<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="modeCreate" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1/projet_gestion_de_stocks?serverTimezone=UTC" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />

            <property name="hibernate.hbm2ddl.auto" value="create" /> <!-- Faire une fois create et commenter une fois que la table est crée -->

            <property name="hibernate.connection.pool_size" value="2" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false" />
        </properties>
    </persistence-unit>

    <persistence-unit name="classique" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1/projet_gestion_de_stocks?serverTimezone=UTC" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />

            <!-- <property name="hibernate.hbm2ddl.auto" value="upgrade" /> -->

            <property name="hibernate.connection.pool_size" value="2" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false" />
        </properties>
    </persistence-unit>

    <persistence-unit name="testUnit" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1/projet_gestion_de_stocks_TEST?serverTimezone=UTC" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />

            <property name="hibernate.hbm2ddl.auto" value="create" /> <!-- Faire une fois create et commenter une fois que la table est crée -->

            <property name="hibernate.connection.pool_size" value="2" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false" />
        </properties>
    </persistence-unit>

</persistence>